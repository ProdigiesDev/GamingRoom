{% extends 'base_clientSide.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>
    <img src="{{ asset('/imagecours/'~cour.imagecours) }}">

    <table class="table">
        <tbody>
        <tr>
            <th>Image cours</th>
            <td> <img src="{{ asset('/imagecours/'~cour.imagecours ) }}" width="40px" height="40px">      </td>
        </tr>
        <tr>
            <th>Lien youtube</th>
            <td>{{ cour.lienyoutube }}</td>
        </tr>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Nom du cours</th>
                <td>{{ cour.nomcours }}</td>
            </tr>
            <tr>
                <th>Déscription</th>
                <td>{{ cour.description }}</td>
            </tr>
        <tr>
            <th>Catégorie</th>
            <td>{{ cour.categorie.nomcategorie }}</td>
        </tr>
            <tr>
                <th>Nombre de Participants</th>
                <td>{{ cour.nbParticipant }}</td>
            </tr>
            <tr>
                <th>Date de Création</th>
                <td>{{ cour.dateCreation ? cour.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mots Clés</th>
                <td>{{ cour.tags }}</td>
            </tr>



        </tbody>
    </table>

    <a href="{{ path('cour_index') }}">back to list</a>

    <a href="{{ path('cour_edit', {'id': cour.id}) }}">edit</a>

    {{ include('cour/_delete_form.html.twig') }}
{% endblock %}
