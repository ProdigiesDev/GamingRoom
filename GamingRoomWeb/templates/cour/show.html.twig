{% extends 'base_clientSide.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1> {{cour.nomcours }} </h1>
    <img src="{{ asset('/images/cours/'~cour.imagecours) }}" align="center" width="400px" height="400px" >

    <table class="table">
        <tbody>

        <tr>
            <th>Lien youtube</th>
            <td>{{ cour.lienyoutube }}</td>
        </tr>


            <tr>
                <th>Déscription</th>
                <td>{{ cour.description }}</td>
            </tr>
        <tr>
            <th>Catégorie</th>
            <td>{{ cour.categorie.nomcategorie }}</td>
        </tr>
            <tr>
                <th>Nombre de Participants</th>
                <td>{{ cour.nbParticipant }}</td>
            </tr>
            <tr>
                <th>Date de Création</th>
                <td>{{ cour.dateCreation ? cour.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mots Clés</th>
                <td>{{ cour.tags }}</td>
