{% extends 'base_admin.html.twig' %}

{% block title %}New Cours{% endblock %}

{% block body %}
    <div class="col-md-10" align="center">
        <h1>Cr√©er un nouveau cours</h1>



        {{ include('cour/_form.html.twig') }}


        <a href="{{ path('cour_index_admin') }}">back to list</a>
        <button id="infoyou" class="btn-danger">Importer informations</button>


    </div>

<!--api youtube-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script id="info-youtube">
        $(document).ready(function () {
            $("#infoyou").click(function(){

                url=$('#cour_lienyoutube').val();
                idpos = url.lastIndexOf("/") + 1;
                id = url.substring(idpos, idpos + 11);
                console.log(url);
                $.ajax({
                    type: 'GET',
                    url: 'https://youtube.googleapis.com/youtube/v3/videos?part=snippet%2CcontentDetails%2Cstatistics&id='+id,
                    data: {
                        key: 'AIzaSyA_8Z1_SB9rtueiZXM3kMLKHlV5kOqTGSY',


                    },
                    success: function (retour) {

                        console.log(retour);
                        //$('iframe').attr('src', 'https://www.youtube.com/embed/' + data.items[0].id.videoId)
                        $("#cour_nomcours").val(retour.items[0].snippet.title);
                        $("#cour_description").val(retour.items[0].snippet.description);
                        $("#cour_tags").val(retour.items[0].snippet.tagsjson);
                        console.log(retour.items[0].snippet.title);

                       // $('.description').text(data.items[0].snippet.description)



                    },

                });
            });
        });

    </script>

{% endblock %}
